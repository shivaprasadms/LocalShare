<UserControl
    x:Class="LocalShare.Views.Controls.SearchingDevices"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LocalShare.Views.Controls"    
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                Margin="0,50"
                HorizontalAlignment="Center"
                FontFamily="Raleway"
                FontSize="22"
                Foreground="{DynamicResource TextControlForeground}" >
                Searching for devices in your local network..<LineBreak /><LineBreak />
                Please make sure your LocalShare mobile app is running and<LineBreak />
                that your phone and pc are connected to the same network</TextBlock>

            <ui:ProgressRing
                Width="100"
                Height="100"
                IsActive="True" />
        </StackPanel>

    </Grid>
</UserControl>
