<Page
    x:Class="LocalShare.Views.DevicesOnline"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LocalShare.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LocalShare.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:viewmodels="clr-namespace:LocalShare.ViewModels"
    Title="DevicesOnline"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">



    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <TextBlock
            Margin="25,35,0,25"
            FontSize="32"
            Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
            Text="Connected Devices" />


        <ui:ScrollViewerEx Grid.Row="1">
            <Grid Margin="25">

                <!--<controls:SearchingDevices Visibility="{Binding Path=SearchingSpinner, Converter={StaticResource BooleanToVisibilityConverter}}" />-->

                <controls:DeviceControl />


            </Grid>

        </ui:ScrollViewerEx>
    </Grid>


</Page>
